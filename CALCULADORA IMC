<body onload="loadCredentials()">
    <div class="container">
        <h1>Calculadora de IMC e Pressão Arterial</h1>
        <form id="imcForm">
        </form>
        <div id="resultado" class="result"></div>
        <div id="dicas" class="tips"></div>

        <div class="chart-container">
            <canvas id="obesityChart"></canvas>
        </div>

        <div id="map"></div>
    </div>

    <script>
        const obesityData = {
            labels: ["América do Norte", "América do Sul", "Europa", "Ásia", "África", "Oceania"],
            datasets: [{
                label: "Taxa de Obesidade (%)",
                data: [36, 22, 20, 15, 10, 30],
                backgroundColor: [
                    "#FF6384", "#36A2EB", "#FFCE56", "#4BC0C0", "#9966FF", "#FF9F40"
                ],
                borderWidth: 1
            }]
        };

        const ctx = document.getElementById('obesityChart').getContext('2d');
        const obesityChart = new Chart(ctx, {
            type: 'bar',
            data: obesityData,
            plugins: [ChartDataLabels],
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Taxa de Obesidade por Continente',
                        font: { size: 18 }
                    },
                    legend: {
                        display: true,
                        position: 'bottom'
                    },
                    datalabels: {
                        anchor: 'end',
                        align: 'top',
                        formatter: (value) => `${value}%`,
                        font: { size: 14, weight: 'bold' }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Taxa de Obesidade (%)',
                            font: { size: 14 }
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Continente',
                            font: { size: 14 }
                        }
                    }
                }
            }
        });

        const map = L.map('map', {
            zoomControl: false,
            dragging: false,
            doubleClickZoom: false,
            scrollWheelZoom: false,
            touchZoom: false,
            boxZoom: false,
            keyboard: false
        }).setView([20, 0], 2);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        const obesityRates = {
            "USA": 36, "BRA": 22, "FRA": 20, "CHN": 15, "NGA": 10, "AUS": 30
        };

        fetch('https://raw.githubusercontent.com/johan/world.geo.json/master/countries.geo.json')
            .then(response => response.json())
            .then(data => {
                data.features.forEach(feature => {
                    const countryCode = feature.properties.iso_a3;
                    const rate = obesityRates[countryCode];
                    if (rate) {
                        L.geoJSON(feature, {
                            style: {
                                fillColor: getColor(rate),
                                fillOpacity: 0.6,
                                color: "#000",
                                weight: 1
                            }
                        }).bindTooltip(`${feature.properties.name}: ${rate}%`, { permanent: false, direction: 'top' }).addTo(map);
                    }
                });
            });

        function getColor(rate) {
            if (rate >= 30) return "#FF0000";
            if (rate >= 20) return "#FFA500";
            if (rate >= 10) return "#FFFF00";
            return "#00FF00";
        }

        async function fetchObesityData() {
            try {
                const response = await fetch('https://api.worldbank.org/v2/country/all/indicator/SH.STA.OBES?format=json');
                const data = await response.json();
                console.log('Dados da API:', data);
            } catch (error) {
                console.error('Erro ao buscar dados da API:', error);
            }
        }

        fetchObesityData();
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

