    <div class="container">
        <h1>Calculadora de Pegada de Carbono</h1>
        <div id="loginSection">
            <h3>Faça Login ou Cadastre-se</h3>
            <input type="text" id="username" class="form-control mb-3" placeholder="Nome de Usuário">
            <input type="password" id="password" class="form-control mb-3" placeholder="Senha">
            <button class="btn btn-primary mb-3" onclick="login()">Login</button>
            <button class="btn btn-warning" onclick="register()">Cadastrar</button>
        </div>
        <div id="mainContent" style="display: none;">
            <div class="text-start mt-4">
                <h3>O que é a Pegada de Carbono?</h3>
                <p>A pegada de carbono representa a quantidade total de gases do efeito estufa (principalmente CO₂)
                    emitidos direta ou indiretamente por nossas atividades diárias, como o consumo de energia,
                    transporte e hábitos de consumo.</p>
            </div>
            <div class="d-flex flex-column align-items-center mt-4">
                <button class="btn btn-warning mb-3" id="btnCalcular" data-bs-toggle="modal"
                    data-bs-target="#modalCalculo">Calcular Pegada de Carbono</button>
            </div>
        </div>
    </div>

    <!-- Modal de Cálculo -->
    <div class="modal fade" id="modalCalculo" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Calcular Pegada de Carbono</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="number" id="luz" class="form-control mb-3" placeholder="Consumo de eletricidade (kWh)">
                    <input type="number" id="carro" class="form-control mb-3" placeholder="Km rodados de carro/mês">
                    <select id="regiao" class="form-control mb-3">
                        <option value="">Selecione sua região</option>
                        <option value="Norte">Norte</option>
                        <option value="Nordeste">Nordeste</option>
                        <option value="Centro-Oeste">Centro-Oeste</option>
                        <option value="Sudeste">Sudeste</option>
                        <option value="Sul">Sul</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" onclick="iniciarCalculo()">Calcular</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let users = JSON.parse(localStorage.getItem("users")) || [];

        // Função fictícia para buscar dados reais da pegada de carbono por região
        async function buscarDadosReais(regiao) {
            // Simula uma requisição assíncrona a uma API
            return new Promise((resolve) => {
                setTimeout(() => {
                    const dadosPorRegiao = {
                        Norte: { pegada: 1.5, descricao: "A região Norte tem uma pegada de carbono moderada devido à grande área de floresta." },
                        Nordeste: { pegada: 1.8, descricao: "A região Nordeste tem uma pegada de carbono média, influenciada pela agricultura e pecuária." },
                        "Centro-Oeste": { pegada: 2.0, descricao: "A região Centro-Oeste tem uma pegada de carbono alta devido à agropecuária intensiva." },
                        Sudeste: { pegada: 2.5, descricao: "A região Sudeste tem a maior pegada de carbono, impulsionada pela industrialização e urbanização." },
                        Sul: { pegada: 2.2, descricao: "A região Sul tem uma pegada de carbono alta, com forte influência da indústria e agricultura." },
                    };
                    resolve(dadosPorRegiao[regiao]);
                }, 1000); // Simula um atraso de 1 segundo
            });
        }

        function register() {
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;
            if (!username || !password) {
                alert("Por favor, preencha todos os campos.");
                return;
            }
            if (users.find(user => user.username === username)) {
                alert("Usuário já cadastrado.");
                return;
            }
            users.push({ username, password });
            localStorage.setItem("users", JSON.stringify(users));
            alert("Cadastro realizado com sucesso!");
        }

        function login() {
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;
            const user = users.find(user => user.username === username && user.password === password);
            if (user) {
                document.getElementById("loginSection").style.display = "none";
                document.getElementById("mainContent").style.display = "block";
            } else {
                alert("Usuário ou senha incorretos.");
            }
        }

        async function iniciarCalculo() {
            const regiao = document.getElementById("regiao").value;
            if (!regiao) {
                alert("Por favor, selecione sua região.");
                return;
            }

            // Fecha o modal de cálculo
            bootstrap.Modal.getInstance(document.getElementById('modalCalculo')).hide();

            // Oculta o botão de cálculo
            document.getElementById("btnCalcular").style.display = "none";

            // Exibe o resultado
            await calcularPegada(regiao);
            document.getElementById("resultadoFinal").style.display = "flex";
        }

        async function calcularPegada(regiao) {
            let luz = parseFloat(document.getElementById("luz").value) || 0;
            let carro = parseFloat(document.getElementById("carro").value) || 0;
            let pegada = (luz * 0.5) + (carro * 0.21);

            let mediaGlobal = 120;
            let comparacao = pegada < mediaGlobal ? "abaixo" : "acima";
            let mensagem = `Sua pegada de carbono é de ${pegada.toFixed(2)} kg de CO₂/mês. Isso está ${comparacao} da média global.`;

            document.getElementById("tituloResultado").style.color = "#000000"; // Cor preta
            document.getElementById("mensagemResultado").innerText = mensagem;

            // Busca dados reais da região
            const dadosRegiao = await buscarDadosReais(regiao);
            if (dadosRegiao) {
                document.getElementById("dadosReaisRegiao").innerText =
                    `Pegada de carbono média na região ${regiao}: ${dadosRegiao.pegada} ton CO₂/ano. ${dadosRegiao.descricao}`;
            }

            gerarGrafico(luz, carro);
            gerarGraficoImpacto(pegada);
        }

        function gerarGrafico(luz, carro) {
            let ctx = document.getElementById("graficoPegada").getContext("2d");
            new Chart(ctx, {
                type: "pie",
                data: {
                    labels: ["Eletricidade", "Carro"],
                    datasets: [{
                        data: [luz, carro],
                        backgroundColor: ["#ffcc80", "#81c784"]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    size: 14
                                }
                            }
                        }
                    }
                }
            });
        }

        function gerarGraficoImpacto(pegada) {
            let ctx = document.getElementById("graficoImpacto").getContext("2d");
            new Chart(ctx, {
                type: "bar",
                data: {
                    labels: ["Florestas", "Oceanos", "Atmosfera", "Biodiversidade"],
                    datasets: [{
                        label: "Impacto (%)",
                        data: [pegada * 0.4, pegada * 0.3, pegada * 0.2, pegada * 0.1],
                        backgroundColor: ["#4caf50", "#03a9f4", "#ff5722", "#9c27b0"]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100
                        }
                    }
                }
            });
        }
    </script>
</body>

