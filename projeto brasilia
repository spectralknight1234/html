    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Biblioteca bcrypt para criptografia -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bcryptjs/2.4.3/bcrypt.min.js"></script>

    <!-- Scripts para navegação, validação e criptografia -->
    <script>
        // Funções para alternar entre telas
        function showRegister() {
            document.getElementById('registerScreen').style.display = 'block';
            document.getElementById('loginScreen').style.display = 'none';
            document.getElementById('calculatorScreen').style.display = 'none';
        }

        function showLogin() {
            document.getElementById('registerScreen').style.display = 'none';
            document.getElementById('loginScreen').style.display = 'block';
            document.getElementById('calculatorScreen').style.display = 'none';
        }

        function showCalculator() {
            document.getElementById('registerScreen').style.display = 'none';
            document.getElementById('loginScreen').style.display = 'none';
            document.getElementById('calculatorScreen').style.display = 'block';
        }

        // Armazenamento de usuários (simulado em memória)
        let users = [];

        // Evento de registro
        document.getElementById('registerForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const name = document.getElementById('registerName').value;
            const email = document.getElementById('registerEmail').value;
            const password = document.getElementById('registerPassword').value;

            // Criptografa a senha antes de armazenar
            bcrypt.hash(password, 10, function(err, hash) {
                if (err) {
                    console.error("Erro ao criptografar a senha:", err);
                    return;
                }

                // Armazena o usuário com a senha criptografada
                users.push({ name, email, password: hash });
                showLogin(); // Redireciona para a tela de login após o registro
            });
        });

        // Evento de login
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;

            // Verifica se o usuário existe
            const user = users.find(u => u.email === email);
            if (!user) {
                alert('E-mail não encontrado. Por favor, registre-se.');
                return;
            }

            // Compara a senha criptografada
            bcrypt.compare(password, user.password, function(err, result) {
                if (err) {
                    console.error("Erro ao comparar senhas:", err);
                    return;
                }

                if (result) {
                    alert('Login realizado com sucesso!');
                    showCalculator(); // Redireciona para a calculadora
                } else {
                    alert('Senha incorreta. Tente novamente.');
                }
            });
        });

        // Função para calcular a pegada de carbono
        function calculateCarbonFootprint(carKm, busKm) {
            const carEmissionFactor = 0.2; // kg CO2 por km
            const busEmissionFactor = 0.1; // kg CO2 por km

            const carEmission = carKm * carEmissionFactor;
            const busEmission = busKm * busEmissionFactor;

            return {
                carEmission: carEmission,
                busEmission: busEmission,
                totalEmission: carEmission + busEmission
            };
        }

        // Função para atualizar os gráficos
        function updateCharts(carEmission, busEmission) {
            // Area Chart
            var ctx = document.getElementById("myAreaChart");
            var myAreaChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ["Carro", "Ônibus"],
                    datasets: [{
                        label: "Emissão de CO2 (kg)",
                        lineTension: 0.3,
                        backgroundColor: "rgba(78, 115, 223, 0.05)",
                        borderColor: "rgba(78, 115, 223, 1)",
                        pointRadius: 3,
                        pointBackgroundColor: "rgba(78, 115, 223, 1)",
                        pointBorderColor: "rgba(78, 115, 223, 1)",
                        pointHoverRadius: 3,
                        pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
                        pointHoverBorderColor: "rgba(78, 115, 223, 1)",
                        pointHitRadius: 10,
                        pointBorderWidth: 2,
                        data: [carEmission, busEmission],
                    }],
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Pie Chart
            var ctx = document.getElementById("myPieChart");
            var myPieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ["Carro", "Ônibus"],
                    datasets: [{
                        data: [carEmission, busEmission],
                        backgroundColor: ['#4e73df', '#1cc88a'],
                        hoverBackgroundColor: ['#2e59d9', '#17a673'],
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        // Evento de submissão do formulário da calculadora
        document.getElementById('carbonFootprintForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const carKm = parseFloat(document.getElementById('carKm').value);
            const busKm = parseFloat(document.getElementById('busKm').value);

            const emissions = calculateCarbonFootprint(carKm, busKm);

            updateCharts(emissions.carEmission, emissions.busEmission);
        });

        // Mostra a tela de registro ao carregar a página
        showRegister();
    </script>

</body>

